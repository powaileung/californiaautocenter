<br />

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">Special Deals</h1>
  <hr />

  <%@specialdeals.each do |specialdeal| %>
    <h2 class="text-center">
      <%= link_to specialdeal.title, specialdeal_path(specialdeal) %></h2>
    <br />
    <div class="row">
    <div class="col-sm-8 col-12">
      <%= number_to_currency specialdeal.cost %>
    </div>
    <div class="col-sm-8 col-12">
      <%= specialdeal.description %>
    </div>
    <div class="col-sm-8 col-12">
      <%= specialdeal.disclaimer %>
    </div>
    <div class="col-sm-4 col-12 text-center">
      <%= link_to 'More Details', specialdeal_path(specialdeal), class: 'btn btn-primary btn-large' %>
    </div>
  </div>
  <br class="clr" />
  <% end %>  
</div>