<br />
<div class="booyah-box col-10 offset-1">
  <h1 class="text-center"><b><%= current_specialdeal.title %></b></h1>
  <hr />
  <br />
  
  <div>
    <h2 class="text-center">
      <span class="badge badge-default">
        Special price at <%= number_to_currency (@specialdeal.cost).to_f / 100 %>
      </span> 
    </h2>
  </div>
  <br />

  <div class="row">
    <div class="col-sm-6 col-12">
      <%= simple_form_for @image, url: admin_images_path(@specialdeal) do |f| %>
        <%= f.input :caption %>
        <%= f.submit "Add a photo", class: 'btn btn-primary' %>
      <% end %>

      <% @specialdeal.images.each do |image| %>
  <div>
      <b><%= image_tag image.picture.url, class: 'img-fluid' %></b>
  </div>
<% end %>
    </div>
    <div class="col-sm-6 col-12">
      <h3><%= @specialdeal.description %></h3>
    </div>
  </div><br />
  
  <div class="row">  
    <div class="col-sm-8 col-12">
      <%= @specialdeal.disclaimer %>
    </div>

    <div class="col-sm-4 col-12 text-center">
      <% if current_user && current_user == @specialdeal.user %>
        <%= link_to 'Edit', edit_admin_specialdeal_path(@specialdeal), class: 'btn btn-primary btn-large' %>
        <%= link_to 'Delete', admin_specialdeal_path(@specialdeal), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-primary btn-large' %>
      <% end %>  
    </div>
  </div>

  <div class="text-center">
    <% if current_user && current_user == @specialdeal.user %>
    <br />
        <%= link_to 'Administer', admin_specialdeal_path(@specialdeal), class: 'btn btn-danger btn-large' %>
    <% end %> 
  </div>
</div>